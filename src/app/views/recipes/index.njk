{% extends 'layout.njk' %}

{% block content %}
<section id="recipes" class="container">
    {% if search %}
    <h1>Buscando por "{{search}}"</h1>
    {% if recipes.length == 0 %}
    <p>Desculpe, não foi possível encontrar nenhuma receita.</p>
    {% endif %}
    {% endif %}
    <div class="recipes-grid grid" {% if search %} style="margin-top: 20px" {% endif %}>
        {% for recipe in recipes %}
        <a href="/receitas/{{recipe.id}}">
        <div class="recipe">
            <img src="{{recipe.imageSrc}}" alt="Imagem de {{recipe.title}}">
            <div class="info">
                <div class="name">{{recipe.title}}</div>
                <div class="author">por {{recipe.chef_name}}</div>
            </div>
        </div>
        </a>
        {% endfor %}
    </div>
</section>
{% endblock content %}