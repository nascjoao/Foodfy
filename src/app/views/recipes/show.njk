{% extends 'layout.njk' %}

{% block content %}
<section id="recipe-show" class="container">
    <header>
        <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
        <strong class="title">{{recipe.title}}</strong>
        <div class="author">por Jorge Relato</div>
    </header>

    <section id="ingredients">
        <h1>Ingredientes</h1>
        <ul>
            {% for ingredient in recipe.ingredients %}
            <li class="ingredient">
                {% if loop.last %}
                {{ingredient}}.
                {% else %}
                {{ingredient}};
                {% endif %}
            </li>
            {% endfor %}
        </ul>
    </section>
    
    <section id="preparation">
        <h1>Modo de preparo</h1>
        <ul>
            {% for step in recipe.preparation %}
            <li class="step">
                {{step}}
            </li>
            {% endfor %}
        </ul>
    </section>
    
    <section id="plus-information">
        <h1>Informações adicionais</h1>
        <p>
            {{recipe.information}}
        </p>
    </section>
</section>
{% endblock content %}